// string handling, wide character
unsigned coco_string_hash(const wchar_t *data, size_t len) {
	unsigned h = 0;
	if (!data) { return 0; }
	for (size_t i = 0; i < len; ++i) {
		h = (h * 7) ^ unsigned(data[i]);
	}
	return h;
}


